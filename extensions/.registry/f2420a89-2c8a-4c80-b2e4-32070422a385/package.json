{
	"name": "@samfurlong/directus-panel-calendar",
	"description": "A calendar panel for Directus",
	"icon": "extension",
	"version": "1.0.3",
	"license": "MIT",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-panel"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "panel",
		"path": "dist/index.js",
